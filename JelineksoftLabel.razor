<label class="jelineksoft-label-margin">
    <span class="jelineksoft-label">@Text</span>
    @ChildContent
</label>

@code {
    [Parameter] public string Text { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
}

